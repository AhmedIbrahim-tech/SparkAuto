@page
@model Web.Pages.ServicesTypes.CreateModel
@{
    ViewData["Title"] = "Create Page";
}

<h1 class="text-success">Create New Service Type </h1>


<div class="container border" style="padding : 30px">
    <form method="post">
        <div class="form-group row">
            <div class="col-1">
                <label asp-for="Services.Name"></label>
            </div>

            <div class="col-6">
                <input class="form-control" asp-for="Services.Name" />
                <span class="text-danger" asp-validation-for="Services.Name"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-1">
                <label asp-for="Services.Price"></label>
            </div>

            <div class="col-6">
                <input class="form-control" asp-for="Services.Price" />
                <span class="text-danger" asp-validation-for="Services.Price"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-1">
                <input type="submit" class="btn btn-success form-control" value="Create" />
            </div>

            <div class="col-3">
                <a asp-page="Index" class="btn btn-primary form-control"> Back to List </a>
            </div>
        </div>

    </form>

</div>


@section Scripts{
<partial name="_ValidationScriptsPartial" />

}