@page
@model Web.Pages.ServicesTypes.DetailsModel
@{
    ViewData["Title"] = "Details Page";
}



<h1 class="text-success">Details Service Type </h1>


<div class="container border" style="padding : 30px">


    <input type="hidden" asp-for="Services.Id" />

    <div class="form-group row">
        <div class="col-1">
            <label class="control-label" asp-for="Services.Name"></label>
        </div>

        <div class="col-6">
            <input class="form-control" asp-for="Services.Name" readonly />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-1">
            <label class="control-label" asp-for="Services.Price"></label>
        </div>

        <div class="col-6">
            <input class="form-control" asp-for="Services.Price" readonly />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-3 offset-1">
            <a asp-route-id="@Model.Services.Id" asp-page="Edit" type="submit" class="btn btn-success form-control" > Edit </a>
        </div>

        <div class="col-3">
            <a asp-page="Index" class="btn btn-primary form-control"> Back to List </a>
        </div>
    </div>


</div>